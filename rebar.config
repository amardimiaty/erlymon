{minimum_otp_vsn, "17.0"}.

%% Erlang compiler options
{erl_opts, [ warn_unused_vars
  , warn_export_all
  , warn_shadow_vars
  , warn_unused_import
  , warn_unused_function
  , warn_bif_clash
  , warn_unused_record
  , warn_deprecated_function
  , warn_obsolete_guard
  , strict_validation
  , warn_export_vars
  , warn_exported_vars
  , warn_missing_spec
  , warn_untyped_record
  , debug_info
  %%, bin_opt_info
  , {parse_transform, lager_transform}]}.

{deps, [
  {hackney, {git, "git://github.com/benoitc/hackney.git", {tag, "1.6.3"}}},
  {jsx, {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.8.0"}}},
  {lager, {git, "git://github.com/basho/lager.git", {tag, "3.2.1"}}},
  {mongodb, {git, "https://github.com/comtihon/mongodb-erlang.git", {tag, "v2.1.0"}}},
  {poolboy, {git, "https://github.com/devinus/poolboy.git", {tag, "1.5.1"}}},
  {ranch, {git, "https://github.com/extend/ranch.git", {tag, "1.4.0"}}},
  {cowboy, {git, "https://github.com/ninenines/cowboy.git", {tag, "2.0.0-rc.3"}}},
  {cowboy_session, {git, "https://github.com/erlymon/cowboy_session.git", {branch, "master"}}},
  {tempo, {git, "git://github.com/pese-git/tempo.git", {branch, "master"}}},
  {syn, {git, "git://github.com/ostinelli/syn.git", {tag, "1.6.0"}}},
  {emodel, {git, "https://github.com/egobrain/emodel.git", {branch, "master"}}},
  {shotgun, {git, "https://github.com/inaka/shotgun.git", {tag, "0.3.0"}}}
]}.

% Cover
{cover_enabled, true}.
{cover_print_enabled, true}.

% Cleanup
{clean_files, ["*.eunit", "ebin/*.beam", "test/*.beam"]}.

%% == Common Test ==

{ct_compile_opts, [ warn_unused_vars
  , warn_export_all
  , warn_shadow_vars
  , warn_unused_import
  , warn_unused_function
  , warn_bif_clash
  , warn_unused_record
  , warn_deprecated_function
  , warn_obsolete_guard
  , strict_validation
  , warn_export_vars
  , warn_exported_vars
  , warn_missing_spec
  , warn_untyped_record
  , debug_info
  , {parse_transform, lager_transform}]}.


{ct_opts, [
  {sys_config, "./config/sys.config"}
]}.


{relx, [{release, {'erlymon', "v3.4"},
  [
    erlymon,
    sasl
  ]},

  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},

  {dev_mode, true},
  {include_erts, false},

  {extended_start_script, true}]
}.

{profiles, [
  {prod, [
    {erl_opts, [no_debug_info, warnings_as_errors]},
    {relx, [{dev_mode, false}, {include_erts, false}]}
  ]},
  {test, [
    {deps, [meck]},
    {erl_opts, [debug_info]}
  ]}
]}.
